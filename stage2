rm -rf stage1
lsb_release -a 
echo "sleeping for 15 seconds"
echo "let's proceed to stage 2"

sudo sed -i 's/stretch/buster/g' /etc/apt/sources.list
sudo rm -f /etc/apt/sources.list.d/*

sudo apt update
sudo apt upgrade -y
sudo apt full-upgrade -y
sudo apt autoremove -y

echo "downloading stage3"
wget https://raw.githubusercontent.com/elvicw/lazy-update/refs/heads/main/stage3
chmod +x stage3

sudo reboot
